
<h1>Bike: <%= @bike.name %></h1>
<div class="row">
	<div class="col-md-6">
		<p>Description: <%= @bike.description %>
		<br></p>

		<h2>Components</h2>
		<ul>
			<li>Frame: <%= @bike.frame.manufacturer.capitalize %> <%= @bike.frame.name.capitalize %> | <%= @bike.frame.weight %>g</li>
			<li>Wheels: <%= @bike.wheel.manufacturer.capitalize %> <%= @bike.wheel.name.capitalize %> | <%= @bike.wheel.weight %>g</li>
			<li>Chainset: <%= @bike.chainset.manufacturer.capitalize %> <%= @bike.chainset.name.capitalize %> | <%= @bike.chainset.weight %>g</li>
		</ul>
	</div>
	<div class="col-md-6">
		<p><%= link_to "Kit index", components_path  %> | <%= link_to "Wheel index", wheels_index_path %></p>
		

		

		<h2>Details</h2>
		<ul>
			<li>Belongs to: <%= @bike.user.name.capitalize %></li>
			<li>Weight: <%= @bike.weight %> grams</li>
		</ul>

		<br>

		<h3>Links</h3>

		<p><%= link_to "Delete bike", bike_path(@bike), method: :delete  %> | <%= link_to "Edit bike", edit_bike_path(@bike)  %> | <%= new_bike %> </p>

		<%= link_to "My Bikes", user_bikes_index_path  %>

		<p><%= link_to "Main Bike index", bikes_path  %></p>
	</div>
</div>







