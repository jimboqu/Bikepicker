Bike Builder

<h2>Frames</h2>
<table class="table">
	<tr>
		<th>Manufacturer</th>
		<th>Model</th>
		<th>Bikes</th>
	</tr>
	<% @frames.each do |frame| %>
	<tr>
		<td><%= frame.manufacturer %></td>
		<td><%= frame.name %></td>
		<td><%= frame.bikes.count %></td>
	</tr>
	<% end %>
	
</table>

<h2>Wheels</h2>

<table class="table">
	<tr>
		<th>Manufacturer</th>
		<th>Model</th>
		<th>Bikes</th>
	</tr>
	<% @wheels.each do |wheel| %>
	<tr>
		<td><%= wheel.manufacturer %></td>
		<td><%= wheel.name %></td>
		<td><%= wheel.bikes.count %></td>
	</tr>
	<% end %>
	
</table>

  <%= simple_form_for @bike, html: { class: 'form-group' } do |f| %>
  <%= f.input :name, html: { class: 'form-control' } %>
  <%= f.input :description, size: "60x12" %>
  <%= f.input :frame_id, collection: Frame.all %>
  <%= f.input :wheel_id, collection: Wheel.all %>
  <%= f.button :submit %>
<% end %>



